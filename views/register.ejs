<%- include('partials/header'); -%>

<div
  class="container my-3 d-flex justify-content-center align-items-center shadow-lg rounded"
  style="min-height: 92vh"
> <div class=" h-75" style="width: 55%;">
  <form
    action="/register"
    method="POST"
    class="shadow-lg rounded cb1"
    style="min-height: 60%; min-width: 30%; background-color: #00000059"
  >
    <div class="form-outline mb-2">
      <label class="form-label mx-3 my-2" for="displayName">Name</label>
      <input
        type="text"
        id="displayName"
        name="displayName"
        class="form-control w-75 mx-3"
        placeholder="Enter Name"
        value="<%= typeof name != 'undefined' ? name : '' %>"
      />
    </div>

    <!-- Email input -->
    <div class="form-outline mb-2">
      <label class="form-label mx-3 my-2" for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control w-75 mx-3"
        placeholder="Enter Email"
        value="<%= typeof email != 'undefined' ? email : '' %>"
      />
    </div>

    <!-- Password input -->
    <div class="form-outline mb-2">
      <label class="form-label mx-3 my-2" for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        class="form-control w-75 mx-3"
        placeholder="Create Password"
        value="<%= typeof password != 'undefined' ? password : '' %>"
      />
    </div>

    <!-- Repeat Password input -->
    <div class="form-outline mb-2">
      <label class="form-label mx-3 my-2" for="password2"
        >Repeat password</label
      >
      <input
        type="password"
        id="password2"
        name="password2"
        class="form-control w-75 mx-3"
        placeholder="Confirm Password"
        value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
      />
    </div>
    <!-- Checkbox -->
    <div class="form-check d-flex justify-content-center mb-2">
      <input
        class="form-check-input me-2"
        type="checkbox"
        value=""
        id="registerCheck"
        checked
        aria-describedby="registerCheckHelpText"
      />
      <label class="form-check-label" for="registerCheck">
        I have read and agree to the terms
      </label>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-1 mx-3 my-2">
      Sign Up
    </button>
    <div class="text-center">
      <p>Already have account? <a href="./Login">Login</a></p>
      <p>or sign up with:</p>
      <div class="d-flex  justify-content-center">
        <a href="/auth/google" class="bg-light text-decoration-none px-2"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-google mx-1 my-2" viewBox="0 0 16 16">
          <path d="M15.545 6.558a9.4 9.4 0 0 1 .139 1.626c0 2.434-.87 4.492-2.384 5.885h.002C11.978 15.292 10.158 16 8 16A8 8 0 1 1 8 0a7.7 7.7 0 0 1 5.352 2.082l-2.284 2.284A4.35 4.35 0 0 0 8 3.166c-2.087 0-3.86 1.408-4.492 3.304a4.8 4.8 0 0 0 0 3.063h.003c.635 1.893 2.405 3.301 4.492 3.301 1.078 0 2.004-.276 2.722-.764h-.003a3.7 3.7 0 0 0 1.599-2.431H8v-3.08z"/>
        </svg>Sign in with Google</a>
      </div>
    </div>
  </form>
</div>
</div>

<%- include('partials/footer'); -%>
