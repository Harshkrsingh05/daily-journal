<%- include('partials/header'); -%>

<div
  class="container my-3 d-flex justify-content-center align-items-center shadow-lg rounded"
  style="min-height: 92vh"
> <div class=" h-75" style="width: 55%;">
  <form
    action="/users/register"
    method="POST"
    class="shadow-lg rounded cb1"
    style="min-height: 60%; min-width: 30%; background-color: #00000059"
  >
    <div class="form-outline mb-2">
      <label class="form-label mx-3 my-2" for="name">Name</label>
      <input
        type="name"
        id="name"
        name="name"
        class="form-control w-75 mx-3"
        placeholder="Enter Name"
        value="<%= typeof name != 'undefined' ? name : '' %>"
      />
    </div>

    <!-- Email input -->
    <div class="form-outline mb-2">
      <label class="form-label mx-3 my-2" for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        class="form-control w-75 mx-3"
        placeholder="Enter Email"
        value="<%= typeof email != 'undefined' ? email : '' %>"
      />
    </div>

    <!-- Password input -->
    <div class="form-outline mb-2">
      <label class="form-label mx-3 my-2" for="password">Password</label>
      <input
        type="password"
        id="password"
        name="password"
        class="form-control w-75 mx-3"
        placeholder="Create Password"
        value="<%= typeof password != 'undefined' ? password : '' %>"
      />
    </div>

    <!-- Repeat Password input -->
    <div class="form-outline mb-2">
      <label class="form-label mx-3 my-2" for="password2"
        >Repeat password</label
      >
      <input
        type="password"
        id="password2"
        name="password2"
        class="form-control w-75 mx-3"
        placeholder="Confirm Password"
        value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
      />
    </div>
    <!-- Checkbox -->
    <div class="form-check d-flex justify-content-center mb-2">
      <input
        class="form-check-input me-2"
        type="checkbox"
        value=""
        id="registerCheck"
        checked
        aria-describedby="registerCheckHelpText"
      />
      <label class="form-check-label" for="registerCheck">
        I have read and agree to the terms
      </label>
    </div>

    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-1 mx-3 my-2">
      Sign Up
    </button>
    <div class="text-center">
      <p>Already have account? <a href="./Login">Login</a></p>
      <p>or sign up with:</p>
      <button type="button" class="btn btn-link btn-floating mx-1">
        <i class="fab fa-facebook-f"></i>
      </button>

      <button type="button" class="btn btn-link btn-floating mx-1">
        <i class="fab fa-google"></i>
      </button>

      <button type="button" class="btn btn-link btn-floating mx-1">
        <i class="fab fa-twitter"></i>
      </button>

      <button type="button" class="btn btn-link btn-floating mx-1">
        <i class="fab fa-github"></i>
      </button>
    </div>
  </form>
</div>
</div>

<%- include('partials/footer'); -%>
