  <div class="container min-vh-90 text-center"style="min-height: 90vh;">
    <h1 class="position-relative text-white text-center">LOGIN to HK Daily Journal</h1>
    <div class="container my-3 d-flex justify-content-center bg-transparent">
        <form action="/users/login" method="POST" class="shadow-lg rounded cb1" style="min-height: 60%; min-width: 30%;background-color:#00000059">
    <!-- Email input -->
    <div class="form-outline mb-4">
        <label class="form-label mx-3 my-2 text-white" for="email">Email address</label>
      <input 
      type="email" id="email"
      name="email"
      class="form-control w-75 mx-3"
      placeholder="Enter Email"
      />
    </div>
    <!-- Password input -->
    <div class="form-outline mb-4">
        <label class="form-label mx-3 my-2 text-white" for="password">Password</label>
      <input 
      type="password"
      id="password"
      class="form-control w-75 mx-3"
      name="password"
      placeholder="Enter password"
      />
    </div>
    <!-- 2 column grid layout for inline styling -->
    <div class="row mb-4">
      <div class="col d-flex justify-content-center">
        <!-- Checkbox -->
        <div class="form-check">
          <input class="form-check-input" type="checkbox" value="" id="form2Example31" checked />
          <label class="form-check-label text-white" for="form2Example31"> Remember me </label>
        </div>
      </div>
      <div class="col text-white">
        <!-- Simple link -->
        <a href="#!">Forgot password?</a>
      </div>
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4 mx-3">Log in</button>
    <!-- Register buttons -->
    <div class="text-center text-white">
      <p>Not a member? <a href="./Register">Register</a></p>
      <p>or sign up with:</p>
      <div class="d-flex justify-content-center g-signin2" data-onsuccess="onSignIn"></div>
    </div>
  </form>
</div>
