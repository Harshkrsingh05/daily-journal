<%- include('partials/header'); -%>

<div class="mx-4 my-2 rounded shadow-lg" style="min-height: 93vh; 
/* background-image: linear-gradient(#dbdcdc ,#E4EfE9 ); */
">
<div>
<h1 class="mx-3 my-2">Home</h1>
<p class="mx-3">Welcome, <span class="fs-5 fw-bolder"><%= user.displayName %></span></p>
<p class="mx-3"><%- StartingContent %></p>
<div class="random-quote mx-3">
  <h4>Quote of the day</h4>
  <p><%= randomQuote.text %></p>
  <p><em>- <%= randomQuote.author || 'Unknown' %></em></p>
</div>
</div>
<!-- for ( var i=0;i<posts.length; i++){  -->
<%blogs.forEach(function(blog){%>
  <div class="blog-entry">
  <h1 class="mx-3"><%=blog.title%>
  </h1>
  <p class="mx-3">Posted on <%= blog.timestamp ? blog.timestamp.toLocaleString() : 'No timestamp available' %></p>  
  <% if (blog.post) { %>
    <p class="mx-3"><%= blog.post.substring(0, 100) + " ..." %></p>
  <% } else { %>
    <p class="mx-3">No content available.</p>
  <% } %>
  <a class="mx-3" href="/posts/<%=blog.title%>/<%= blog._id %>">Read More</a>
  <form class="mx-3" method="POST" action="/delete/<%= blog._id %>" style="display:inline;">
    <button type="submit">Delete<span><i class="fa-solid fa-trash fa-xs"></i></span></button>
  </form>
</div>
 <%})%>
</div>
 





<%- include('partials/footer'); -%>
